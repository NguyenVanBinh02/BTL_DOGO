<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_165sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:backgroundTint="#E3E0E0"
        app:cardCornerRadius="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_4"
                app:shapeAppearanceOverlay="@style/ImageRounded" />

            <ImageView
                android:backgroundTint="#E91E63"
                android:background="@drawable/bg_icon_add"
                android:tint="@color/white"
                android:padding="@dimen/_4sdp"
                android:id="@+id/icLove"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_22sdp"
                android:src="@drawable/baseline_favorite"
                android:layout_alignParentEnd="true"
                tools:ignore="UseAppTint" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:orientation="vertical"
        android:paddingTop="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_6sdp"
            android:text="Name"
            android:textColor="#000"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#FB0606"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:background="@drawable/bg_icon_add"
        android:id="@+id/icAdd"
        android:src="@drawable/round_add_24"
        android:padding="@dimen/_4sdp"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>