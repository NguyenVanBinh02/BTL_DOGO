<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

       <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_toEndOf="@id/checkbox"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:backgroundTint="#E3E0E0"
        android:paddingRight="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <!-- ShapeableImageView for product image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_6sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_4"
            app:shapeAppearanceOverlay="@style/ImageRounded" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/cardView"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ban an 4 ghe"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginVertical="@dimen/_8sdp"
                android:id="@+id/txt_Gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30.000.000"
                android:textStyle="bold|italic"
                android:textSize="@dimen/_16sdp"
                android:textColor="#fa0202"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/txt_remove"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:background="@drawable/rounded_header"
                    android:src="@drawable/baseline_remove" />

                <TextView
                    android:id="@+id/txt_SL"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="1"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/txt_add"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:background="@drawable/rounded_header"
                    android:src="@drawable/baseline_add" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
